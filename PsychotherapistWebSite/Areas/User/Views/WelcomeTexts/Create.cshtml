@model PsychotherapistWebSite.Core.Models.WelcomeText

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/User/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","WelcomeTexts",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal js-form">
        <h4>WelcomeText</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5 })
                <span class="small text-muted js-counter">600</span>
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <hr />
        
        <h4>Mesai Bilgileri</h4>

        <div class="form-group">
            @Html.LabelFor(model => model.DaysHour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DaysHour, new { @class = "form-control", rows = 5 })
                <span class="small text-muted js-counter">600</span>
                @Html.ValidationMessageFor(model => model.DaysHour, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.NoteForClosedDay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoteForClosedDay, new { @class = "form-control", rows = 5 })
                <span class="small text-muted js-counter">600</span>
                @Html.ValidationMessageFor(model => model.NoteForClosedDay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri", "Index")
</div>

@section scripts{
    <script>
        $(document).ready(function() {
            counter(600);
        })
    </script>
}
