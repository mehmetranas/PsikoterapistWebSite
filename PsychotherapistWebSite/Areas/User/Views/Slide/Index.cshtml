@model IEnumerable<PsychotherapistWebSite.Core.Models.Slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Slayt", "Create")
</p>
<p>
    @Html.ActionLink("Resim Yazıları", "Index","Motto")
</p>
<p>
    @Html.ActionLink("Resimler", "Index","Images")
</p>
<table class="table">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motto.Title)
        </th>
        <th></th>
    </tr>

@{int i = 0;}
@foreach (var slide in Model)
{
    i++;
    <tr>
        <td>
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => slide.Image.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => slide.Motto.Title)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=slide.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=slide.Id })
        </td>
    </tr>
   
} 
</table>
