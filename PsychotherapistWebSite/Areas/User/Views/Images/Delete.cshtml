@model PsychotherapistWebSite.Core.Models.Image

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/User/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Silmek istediğinizden emin misiniz?</h3>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <hr/>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

        </div>
        <div class="col-md-4">
            <img src="~/Images/Slide/@Model.Url" class="img-responsive img-thumbnail" alt="@Model.Name"/>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default"/> |
            @Html.ActionLink("Geri", "Index")
        </div>
    }
</div>
